/*
 * Fibonacci sequence
 * find the sum of the even-valued terms.
 * 
 */

/**
 * @author raymondeleko
 *
 */

public class Euler_2 
{

	public static void main(String[] args)
	{
			    int num1 = 0;
			    int num2 = 1;
			    int sum = 0;
			    while (num1 + num2 < 4000000) {
			      int temp = num1 + num2;
			      num1 = num2;
			      num2 = temp;
			      if (num2 % 2 == 0) { sum += num2; }
			    }

			    System.out.println("The sum of even terms is " + sum);
			  
	}

}
